#include <cs50.h>
#include <stdio.h>
#include <string.h>
#include <math.h>
#include "helpers.h"

/**
 * Returns true if value is in array of n values, else false.
 */
 
bool search(int value, int values[], int n)
{
    int start = 0;
    int mid = 0;
    int end = n-1;
    
    while (start < end)
    { 
        mid = (start + end)/2;
        if ((values[mid] == value) || (values[start] == value) || (values[end] == value))
            {
              return true;
            }
        else if (values[mid] > value)
            {
              end = mid - 1;
            }
        else
            {
              start = mid + 1;
            }
    }
        return false;
}

/**
 * Sorts array of n values.
 */
void sort(int values[], int n)
{
      int temp;
    
  for (int i = 0; i < (n-1); i++)
        for (int j = 0; j < n - i - 1; j++)
            if (values[j] > values[j+1])
                {
                  temp = values[j];
                  values[j] = values[j+1];
                  values[j+1] = temp;                
                }
    return;
}
